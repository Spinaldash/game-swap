.container-fluid
  .row
    .col-xs-12

      table.table.table-striped
        caption Offers to Me
        thead
          tr
            th #
            th Item 1
            th Item 2
            th Created
            th Options     
        tbody
          tr(ng-repeat='trade in trades | filter : item1filter')
            th {{$index}}
            td {{trade.item1.name}}
            td {{trade.item2.name}}
            td
              span(am-time-ago='trade.createdAt')
            td Options
    .col-xs-12
      table.table.table-striped
        caption my Offers to Others
        thead
          tr
            th #
            th Item 1
            th Item 2
            th Created
            th Options     
        tbody
          tr(ng-repeat='trade in trades | filter : item2filter')
            th {{$index}}
            td {{trade.item1.name}}
            td {{trade.item2.name}}
            td
              span(am-time-ago='trade.createdAt')
            td Le Optiones
    .col-xs-12
      table.table.table-striped
        caption Trade history
        thead
          tr
            th #
            th Item1 
            th Item2
            th Date Completed       
        tbody
          tr(ng-repeat='trade in trades | filter : historyfilter')
            th {{$index}}
            td {{trade.item1.name}}
            td {{trade.item2.name}}
            td  
              span(am-time-ago='trade.completedAt')
